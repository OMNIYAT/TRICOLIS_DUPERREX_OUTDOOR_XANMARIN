<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OutDoor_Guide.Views.MenuPlan"
             Title="PLANS"
             >
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="20" Orientation="Vertical" Spacing="10">

            <Button Style="{StaticResource buttonStyle}" Text="Mission" Clicked="Mission_Button_Clicked" WidthRequest="200"></Button>

            <Button Style="{StaticResource buttonStyle}" Text="Frais" Clicked="Frais_Button_Clicked" WidthRequest="200"></Button>

            <Button Style="{StaticResource buttonStyle}" Text="Informations" Clicked="Information_Button_Clicked" WidthRequest="200"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>